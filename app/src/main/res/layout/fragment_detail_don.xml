<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- "Ticket" container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ticket_background"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/ticket_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reçu de Don"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction n° : 1234567890"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/text_montant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Montant du don : 10€"
                android:textSize="16sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/text_contribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contribution : 1€"
                android:textSize="16sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/text_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total payé : 11€"
                android:textSize="16sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : 03/06/2025"
                android:textSize="16sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/text_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom du donateur : Fatimata Diallo"
                android:textSize="16sp"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_thankyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merci pour votre générosité ❤️"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="italic"
                android:paddingTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
