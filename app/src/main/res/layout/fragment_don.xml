        <!-- MONTANTS FIXES -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginBottom="20dp"
            android:columnOrderPreserved="false"
            android:background="@color/white">

            <Button
                android:id="@+id/button_amount_5"
                android:text="@string/amount_5"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                android:background="@color/white" />

            <Button
                android:id="@+id/button_amount_10"
                android:text="@string/amount_10"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                android:background="@color/white" />

            <Button
                android:id="@+id/button_amount_15"
                android:text="@string/amount_15"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                android:background="@color/white" />

            <Button
                android:id="@+id/button_amount_20"
                android:text="@string/amount_20"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                android:background="@color/white" />
        </GridLayout>


        <!-- MONTANT LIBRE -->
        <TextView
            android:id="@+id/tvCustomAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_amount_label"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCustomAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/custom_amount_hint"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:background="#222222"
            android:layout_marginBottom="20dp" />

        <!-- BOUTON DON -->
        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_donate"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
